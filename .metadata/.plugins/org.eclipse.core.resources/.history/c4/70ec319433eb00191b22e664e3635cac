package pages;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class GmailLoginPage {

	WebDriver driver;

	public GmailLoginPage(WebDriver driver) {
		super();
		this.driver = driver;
	}

	@FindBy(xpath = "//div[contains(text(),'Email or phone')]")
	WebElement emailText;
	
	@FindBy(xpath = "//div[contains(text(),'Enter your password')]")
	WebElement emailPassword;
	

	public void emailText(String emailtext) {

		emailText.sendKeys(emailtext);
	}

	public void emailPassword(String emailtext) {

		emailText.sendKeys(emailtext);
	}
}

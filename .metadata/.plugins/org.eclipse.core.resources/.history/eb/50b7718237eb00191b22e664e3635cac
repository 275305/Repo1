package pages;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.FindBy;

public class GmailLoginPage {

	WebDriver driver;

	public GmailLoginPage(WebDriver driver) {
		super();
		this.driver = driver;
	}
    /* x-path for email-id*/
	@FindBy(xpath = "//div[contains(text(),'Email or phone')]")
	WebElement emailText;
	
	@FindBy(xpath="//span[contains(text(),'Next')]")
	WebElement nextButton;
	
	/*x-path for email password*/
	@FindBy(xpath = "//div[contains(text(),'Enter your password')]")
	WebElement emailPassword;
	
     //enter the email id
	public void emailText(String emailtext) {
	/*	Actions actions = new Actions(driver);
		actions.moveToElement(emailText);
		actions.click().sendKeys(emailtext);
		//actions.sendKeys();
		actions.build().perform();*/
		emailText.sendKeys(emailtext);
		Thread.sleep(3000);
		nextButton.click();
	}
     //enter the password
	public void emailPassword(String emailtext) {

		emailText.sendKeys(emailtext);
	}
}

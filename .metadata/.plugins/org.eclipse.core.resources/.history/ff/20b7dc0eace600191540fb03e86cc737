package com.string.java;

public class Stringpalindrome {

	public static void main(String[] args) {
  int i,j;
		String strRev = "madam";
		char arr[] = strRev.toCharArray();
		int len = arr.length;
		System.out.println(len-1);
		 
		for (i = 0; i < len; i++) {
		 for(j=len-1;j<len;j--){
			 if(arr[i]==arr[j]){
			System.out.print(arr[i]);
			}
		}
	}
	}
}
